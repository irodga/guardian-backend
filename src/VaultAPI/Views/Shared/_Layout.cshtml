@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Guardian</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<style>
/* Aseguramos que el contenedor del menú ocupe toda la altura */
.navbar-nav {
    height: 100vh; /* 100% del alto de la ventana */
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Alineamos el contenido hacia arriba */
    padding-top: 20px;
    padding-bottom: 20px;
}

/* Mejoramos la presentación de los enlaces del menú */
.navbar {
    border-right: 2px solid #ddd; /* Borde a la derecha */
    background-color: #f8f9fa;  /* Color de fondo suave */
}

/* Aseguramos que los enlaces del menú se vean bien */
.nav-item {
    margin-bottom: 15px;  /* Agregar espacio entre los elementos del menú */
}

/* Estilo del enlace activo */
.nav-link.active {
    background-color: #007bff;  /* Fondo azul para el enlace activo */
    color: white;  /* Texto blanco */
    border-radius: 4px;
}

/* Estilo para los enlaces del menú */
.nav-link {
    color: #333;  /* Color de texto de los enlaces */
    font-weight: 500; /* Hacemos que el texto sea más legible */
    text-transform: uppercase; /* Capitalizamos los enlaces */
    padding: 10px;
    border-radius: 4px;
    transition: background-color 0.3s ease;  /* Transición suave para el hover */
}

.nav-link:hover {
    background-color: #f1f1f1; /* Efecto hover en los enlaces */
}

/* Ajustes de estilo para el contenedor del dashboard */
.container-fluid {
    margin-top: 20px; /* Espaciado superior para el contenido */
}

/* Aseguramos que el contenido del dashboard tenga un buen espaciado */
.col-md-9 {
    padding-left: 30px;
    padding-right: 30px;
}

/* Mejorar el espaciado y hacer que el menú se vea más limpio */
.sidebar {
    position: sticky; 
    top: 0;
    height: 100%;
}

/* Estilos de iconos de navegación */
.nav-link i {
    margin-right: 10px;  /* Espacio entre el icono y el texto */
}
</style>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Menú de navegación izquierdo) -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Dashboard")">
                                <i class="bi bi-house-door"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Secrets")">
                                <i class="bi bi-lock"></i> Secretos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Secrets")">
                                <i class="bi bi-plus-square"></i> Crear Secreto
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-person"></i> Mi Perfil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-4">
                @RenderBody()  <!-- Aquí se renderiza el contenido de cada vista -->
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Guardian</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<style>
/* Aquí va tu estilo para el menú lateral y demás */
.navbar-nav {
    height: 100vh; /* 100% del alto de la ventana */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 20px;
    padding-bottom: 20px;
}

.navbar {
    border-right: 2px solid #ddd;
    background-color: #f8f9fa;
}

.nav-item {
    margin-bottom: 15px;
}

.nav-link.active {
    background-color: #007bff;
    color: white;
    border-radius: 4px;
}

.nav-link {
    color: #333;
    font-weight: 500;
    text-transform: uppercase;
    padding: 10px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.nav-link:hover {
    background-color: #f1f1f1;
}

.container-fluid {
    margin-top: 20px;
}

.col-md-9 {
    padding-left: 30px;
    padding-right: 30px;
}
</style>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Menú de navegación izquierdo (en Layout) -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar" style="height: 100vh; padding-top: 20px;">
                <nav class="navbar navbar-light">
                    <div class="navbar-nav flex-column">
                        <a href="@Url.Action("Index", "Dashboard")" class="nav-item nav-link active">Dashboard</a>
                        <a href="@Url.Action("Index", "Secrets")" class="nav-item nav-link">Secretos</a>
                        <a href="@Url.Action("Create", "Secrets")" class="nav-item nav-link">Agregar Secreto</a>
                        <a href="@Url.Action("Index", "AccessLogs")" class="nav-item nav-link">Accesos Recientes</a>
                        <a href="@Url.Action("Index", "Companies")" class="nav-item nav-link">Empresas</a>
                        <a href="@Url.Action("Index", "Groups")" class="nav-item nav-link">Grupos</a>
                        <a href="@Url.Action("Index", "Users")" class="nav-item nav-link">Usuarios</a>
                    </div>
                </nav>
            </div>

            <!-- Contenido principal de la página (Aquí se carga lo que corresponde en cada vista, como el Dashboard) -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-4">
                @RenderBody()  <!-- Aquí se renderiza el contenido de cada vista -->
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model VaultAPI.Models.ViewModels.DashboardViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Dashboard - Guardian</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

<div class="container mt-5">
    <h3>Dashboard - Resumen de Secretos</h3>

    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Total de Secretos</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.SecretsCount secretos disponibles</h5>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Total de Accesos</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.AccessCount accesos</h5>
                </div>
            </div>
        </div>
    </div>

    <h4>Últimos Secretos</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var secret in Model.RecentSecrets)
            {
                <tr>
                    <td>@secret.Name</td>
                    <td>@secret.Type</td>
                    <td>@secret.Expiration?.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Accesos Recientes</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Secreto</th>
                <th>Acción</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var access in Model.RecentAccesses)
            {
                <tr>
                    <td>@access.Secret.Name</td>
                    <td>@access.Permission</td>
                    <td>@(access.GrantedAt.ToString("dd/MM/yyyy HH:mm:ss") ?? "Sin fecha")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

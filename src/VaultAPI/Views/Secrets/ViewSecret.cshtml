@model VaultAPI.Models.Secret

@{
    ViewData["Title"] = "Ver Secreto";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h1>@Model.Name</h1>
    <p><strong>Tipo:</strong> @Model.Type</p>
    <p><strong>Fecha de Expiraci√≥n:</strong> @Model.Expiration?.ToString("dd/MM/yyyy")</p>
    <p><strong>Empresa Asociada:</strong> @Model.CompanyId</p>

    <div>
        <h3>Valor del Secreto:</h3>
        <pre>@ViewData["SecretValue"]</pre>
    </div>

</body>
</html>

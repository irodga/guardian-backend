@model VaultAPI.Models.Secret  <!-- El modelo es 'Secret' -->

<h3>Vista de Secreto</h3>

<div>
    <h4>Nombre del Secreto:</h4>
    <p>@Model.Name</p> <!-- Muestra el nombre del secreto -->

    <h4>Tipo:</h4>
    <p>@Model.Type</p> <!-- Muestra el tipo del secreto -->

    <h4>Fecha de Expiración:</h4>
    <p>@Model.Expiration?.ToString("yyyy-MM-dd")</p> <!-- Muestra la fecha de expiración -->

    <h4>Empresa Asociada:</h4>
    <p>@Model.CompanyId</p> <!-- Muestra el ID de la empresa asociada -->

    <h4>Valor del Secreto:</h4>
    <!-- Mostrar el valor del secreto recuperado de Vault -->
    <p>@ViewData["SecretValue"]</p>
</div>
